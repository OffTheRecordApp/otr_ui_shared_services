{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["app.ts", "services/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
